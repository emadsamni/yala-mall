<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:text="@string/filter"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="9pt" />

    <LinearLayout
        android:id="@+id/cat_layout"
        android:layout_width="match_parent"
        android:layout_height="30pt"
        android:padding="5pt"
        android:paddingStart="20pt"
        android:paddingEnd="20pt"
        android:weightSum="3"

        >


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="20pt"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:background="@drawable/filter_reduis"
            android:orientation="horizontal"

            android:weightSum="3">

            <LinearLayout
                android:id="@+id/cat_cat_filter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/border_raduis"
                android:gravity="center"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/browse"
                    android:textColor="@color/colorPrimary"
                    android:textSize="6pt" />
            </LinearLayout>

            <TextView
                android:id="@+id/cat_text_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:text="النوع"
                android:textColor="@color/white"
                android:textDirection="rtl"
                android:textSize="8pt" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sub_cat_layout"
        android:layout_width="match_parent"
        android:layout_height="30pt"
        android:padding="5pt"
        android:paddingStart="20pt"
        android:paddingEnd="20pt"
        android:weightSum="3"

        >


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="20pt"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:background="@drawable/filter_reduis"
            android:orientation="horizontal"

            android:weightSum="3">

            <LinearLayout
                android:id="@+id/sub_cat_filter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/border_raduis"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/browse"
                    android:textColor="@color/colorPrimary"
                    android:textSize="6pt" />
            </LinearLayout>

            <TextView
                android:id="@+id/sub_cat_text_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:text=" النوع الفرعي "
                android:textColor="@color/white"
                android:textDirection="rtl"
                android:textSize="8pt" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/size_layout"
        android:layout_width="match_parent"
        android:layout_height="30pt"
        android:padding="5pt"
        android:paddingStart="20pt"
        android:paddingEnd="20pt"
        android:weightSum="3"

        >


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="20pt"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:background="@drawable/filter_reduis"
            android:orientation="horizontal"

            android:weightSum="3">

            <LinearLayout
                android:id="@+id/size_filter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/border_raduis"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/browse"
                    android:textColor="@color/colorPrimary"
                    android:textSize="6pt" />
            </LinearLayout>

            <TextView
                android:id="@+id/size_text_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:text="القياس"
                android:textColor="@color/white"
                android:textDirection="rtl"
                android:textSize="8pt" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>