<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:background="@color/colorPrimary"
        android:textSize="9pt"
        android:text="@string/filter"
        android:textColor="@color/white"
        android:gravity="center_vertical"
       />

<LinearLayout
    android:id="@+id/cat_layout"
    android:layout_width="match_parent"
    android:layout_height="30pt"
    android:weightSum="3"
    android:padding="5pt"
    android:paddingStart="20pt"
    android:paddingEnd="20pt"

    >



    <LinearLayout
        android:background="@drawable/filter_reduis"
        android:layout_width="0dp"
        android:layout_height="20pt"
        android:layout_weight="3"
        android:layout_gravity="center_vertical"
        android:weightSum="3"

        android:orientation="horizontal">
            <LinearLayout
            android:background="@drawable/border_raduis"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/cat_cat_filter"

               >
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:textSize="6pt"
                    android:text="@string/browse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        <TextView
            android:id="@+id/cat_text_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:text="النوع"
            android:textColor="@color/white"
            android:textDirection="rtl"
            android:textSize="8pt" />

    </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:id="@+id/sub_cat_layout"
        android:layout_width="match_parent"
        android:layout_height="30pt"
        android:weightSum="3"
        android:padding="5pt"
        android:paddingStart="20pt"
        android:paddingEnd="20pt"

        >



        <LinearLayout
            android:background="@drawable/filter_reduis"
            android:layout_width="0dp"
            android:layout_height="20pt"
            android:layout_weight="3"
            android:layout_gravity="center_vertical"
            android:weightSum="3"

            android:orientation="horizontal">
            <LinearLayout
                android:background="@drawable/border_raduis"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/sub_cat_filter"
                >
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:textSize="6pt"
                    android:text="@string/browse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/sub_cat_text_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:text=" النوع الفرعي "
                android:textColor="@color/white"
                android:textDirection="rtl"
                android:textSize="8pt" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/size_layout"
        android:layout_width="match_parent"
        android:layout_height="30pt"
        android:weightSum="3"
        android:padding="5pt"
        android:paddingStart="20pt"
        android:paddingEnd="20pt"

        >



        <LinearLayout
            android:background="@drawable/filter_reduis"
            android:layout_width="0dp"
            android:layout_height="20pt"
            android:layout_weight="3"
            android:layout_gravity="center_vertical"
            android:weightSum="3"

            android:orientation="horizontal">
            <LinearLayout
                android:background="@drawable/border_raduis"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/size_filter"
                >
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:textSize="6pt"
                    android:text="@string/browse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/size_text_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:text="القياس"
                android:textColor="@color/white"
                android:textDirection="rtl"
                android:textSize="8pt" />

        </LinearLayout>

    </LinearLayout>







</LinearLayout>